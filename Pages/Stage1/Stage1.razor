@page "/stage1"

@inherits Stage1Base.Stage1Base

<h3>Stage 1</h3>


<div>
     <div class="card">
        <div class="card-body">
            <img src="@CurrentPictureURL" class="responsive">
        </div>
    </div>
    <div class="spacer" />
</div>

<div class="row content">
    <div class="col-4">
        <input type="button" class="btnNextPrev" value=" PREVIOUS " @onclick="()=>LoadPreviousPicture()" />
    </div>

    <div class="col-4">
        <input type="button" class="btnNextPrev" value="   SAVE   " @onclick="()=>SavePicture()" />
    </div>

     <div class="col-4">
        <input disabled="@DisableNextButton" type="button" class="btnNextPrev" value="   NEXT   " @onclick="()=>LoadNextPicture()" />
    </div>
</div>

